<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/space_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_16">

        <TextView
            android:id="@+id/type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space_16"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorOnSecondary"
            android:textSize="@dimen/big_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_20"
            android:drawablePadding="@dimen/space_16"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/big_text"
            app:layout_constraintEnd_toEndOf="@+id/controller_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/receiver_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:drawablePadding="@dimen/space_16"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/inter_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type_text_view" />

        <TextView
            android:id="@+id/amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space_16"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/inter_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/receiver_text_view" />

        <ImageView
            android:id="@+id/controller_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_8"
            android:contentDescription="@null"
            android:src="@drawable/ic_navigation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
